{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "jsx": "react",
        "outDir": "webpack/build",
        "rootDir": "webpack",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true
    },
    "filesGlob": [
        "webpack/typings/index.d.ts",
        "webpack/react/**/*.ts",
        "webpack/react/**/*.tsx"
    ],
    "include": [
        "webpack/react"
    ],
    "compileOnSave": false
}
